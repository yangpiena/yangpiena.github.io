<%- partial('_partial/header', {headerType: 'tags'}) %>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            <!-- 标签云 -->
            <div id='tag_cloud' class="tags">
                <% site.tags.map(function(tag){  %>
                    <a style="font-size: 1.5rem;" href="#<%= tag.name %>" title="<%= tag.name %>" rel="<%= tag.length %>"><%= tag.name %></a>
                    &nbsp;&nbsp;&nbsp;
                <% }) %>
            </div>

            <br><br>
            
            <!-- 标签列表 -->
            <% site.tags.map(function(tag){  %>
                <div class="">
                    <span class="" id="<%= tag.name %>">
                        <span class="tag-text"><%= tag.name %></span>
                    </span>
                    <% tag.posts.map(function(post){  %>
                        <div class="archive-item">
                            <a class="post-title" href="<%- config.root %><%- post.path %>">
                                <%- post.title || "Untitled" %>
                                <% if (post.subtitle && post.subtitle.length) { %>
                                    <%- post.subtitle %>
                                <% } %>
                            </a>
                            <!-- <p class="post-meta">{{ post.date | date:"%Y-%m-%d" }}</p> -->
                        
                        </div>
                    <% }) %>
                </div>
            <% }) %>


        </div>
    </div>
</div>

<%- partial('_partial/pagination') %>